    "gray-matter": "^4.0.3",
    "openai": "^5.23.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
